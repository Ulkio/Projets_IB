<UserControl x:Class="TerrorWPF.Accueil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TerrorWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Margin="10">
        <StackPanel.Background>
            <LinearGradientBrush StartPoint="0 0" EndPoint="1 1">
                <GradientStop Offset="0" Color="Red"/>
                <GradientStop Offset="1" Color="Black" />
            </LinearGradientBrush>
        </StackPanel.Background>
        
        
        <TextBlock Style="{StaticResource PhraseAccueil}"  Text="ACCUEIL"></TextBlock>
        <TextBlock Style="{StaticResource PhraseAccueil}"  Text="Choisissez la liste à afficher"></TextBlock>
        
        
    </StackPanel>
</UserControl>
