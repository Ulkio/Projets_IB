<Application x:Class="TerrorWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TerrorWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="mesBoutons" TargetType="Button">
            <Setter Property="Margin" Value="20" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="10"/>
            <Setter Property="Content" Value="coucou"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="PhraseAccueil">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="PhraseListe">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Application.Resources>
</Application>
