<Window x:Class="TerrorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TerrorWPF"
        mc:Ignorable="d"
        Title="Terrorify" Height="450" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <!-- Row pour les messages d'erreurs -->
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Border CornerRadius="20" Padding="10" Margin="10" Grid.Row="0" Background="Green" Grid.ColumnSpan="2">
            <Label FontFamily="impact" Foreground="Yellow" HorizontalAlignment="Center" FontSize="50" Grid.ColumnSpan="2">Terrorify</Label>
        </Border>

        <StackPanel Grid.Row="1">
            <Button Grid.Row="1" Height="50" Width="150">Bouton 1</Button>

            <Button Grid.Row="1" Height="50" Width="150" Margin="20">Bouton 2</Button>
        </StackPanel>

        <Label FontSize="50" Grid.ColumnSpan="2" Grid.Row="2">Je suis prêt</Label>

    </Grid>
</Window>
