@page "/counter"

<h1>Counter</h1>

<p style="color:@((currentCount<0)?"red":"green")">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="()=> { currentCount = currentCount - 1; }">-</button>
<button class="btn btn-primary" @onclick="IncrementCount">+</button>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
