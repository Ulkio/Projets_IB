@model FirstApp.Models.Question
@{
    ViewBag.Title = "Question : " + Model.Text;
}

<h2>@Model.Text</h2>


<div class="form-group">
    <label>Nombre de réponses Ok</label>
    <div class="form-control">@ViewBag.NombreReponsesVraies</div>
</div>

<div class="form-group">
    <label>Nombre de réponses pas Ok</label>
    <div class="form-control">@ViewBag.NombreReponsesFausses</div>
</div>
<h2>Réponses</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Utilisateur</th>
                <th>Réponse</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Reponses.OrderByDescending(c=>c.DateReponse))
            {
            <tr>
                <td>@r.DateReponse.ToShortTimeString()</td>
                <td>
                    @if (r.Valeur)
                    {
                        <img src="~/Images/ok.png" style="width:2em" />
                    }
                    else
                    {
                        <img src="~/Images/pas-ok.png" style="width:2em" />
                    }
            </td>
            <td>@r.Utilisateur.Nom  @r.Utilisateur.Prenom</td>

            </tr>
            }

        </tbody>
    </table>

