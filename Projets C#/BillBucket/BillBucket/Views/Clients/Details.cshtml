@model BillBucket.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroSiret)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroSiret)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adresse)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroTelephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroTelephone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mail)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Modifier le client</a> |
    <a asp-action="Index">Retour à la liste de clients</a>
</div>
<div>
    <h3>Liste de factures</h3>
    @foreach (var item in @Model.Factures)
    {
        <a asp-action="Details" asp-controller="Factures" asp-route-id="@item.Id">
            Facture n°@item.NumeroFacture du @item.DateEmission.Date pour @item.Client.Nom
        </a>
        <a class="btn btn-primary" asp-action="Edit" asp-controller="Factures" asp-route-id="@item.Id">Modifier</a>
        <a class="btn btn-danger" asp-action="Delete" asp-controller="Factures" asp-route-id="@item.Id">Supprimer</a>
        <hr />
    }
</div>