@model BillBucket.Models.Facture

@{
    ViewData["Title"] = "Edit";
}

<h1>Edition</h1>

<h4>Facture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NumeroFacture" class="control-label"></label>
                <input asp-for="NumeroFacture" class="form-control" />
                <span asp-validation-for="NumeroFacture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEmission" class="control-label"></label>
                <input type="date" asp-for="DateEmission" class="form-control" />
                <span asp-validation-for="DateEmission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateReglement" class="control-label"></label>
                <input type="date" asp-for="DateReglement" class="form-control" />
                <span asp-validation-for="DateReglement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdClient" class="control-label"></label>
                <select asp-for="IdClient" class="form-control" asp-items="ViewBag.IdClient"></select>
                <span asp-validation-for="IdClient" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

        <a asp-action="Create" asp-controller="Prestations" asp-route-idFacture="@Model.Id">Ajouter une prestation</a>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Prestations</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model.Prestations)
                    {
                        <tr>
                            <td>@item.Nom</td>
                            <td><a asp-action="Delete" asp-controller="Prestations" asp-route-id="@item.Id" class="btn btn-danger"> X </a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
