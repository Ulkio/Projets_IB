@model Facturation.Models.Paiement

@{
    ViewData["Title"] = "Create";
}
    <form asp-action="Create">
        <h1>Nouveau paiement pour @ViewBag.Client.RaisonSociale</h1>
        <menu>
            <input type="submit" value="Creation" class="btn btn-primary" />

        </menu>

        <hr />
        <div class="row">
            <div class="col-md-4">

                @Html.HiddenFor(c => c.IdClient)
                @Html.HiddenFor(c => c.Id)

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Moyen" class="control-label"></label>
                    <input asp-for="Moyen" class="form-control" />
                    <span asp-validation-for="Moyen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Montant" class="control-label"></label>
                    <input asp-for="Montant" class="form-control" />
                    <span asp-validation-for="Montant" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateReception" class="control-label"></label>
                    <input  type="date" asp-for="DateReception" class="form-control" />
                    <span asp-validation-for="DateReception" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateBanque" class="control-label"></label>
                    <input  type="date" asp-for="DateBanque" class="form-control" />
                    <span asp-validation-for="DateBanque" class="text-danger"></span>
                </div>



            </div>
        </div>


    </form>