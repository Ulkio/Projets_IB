@model Facturation.Models.Client

@{
    ViewData["Title"] = "Create";
}

    <form asp-action="Create">
        <h1>Création de  client</h1>
        <menu>
            <input type="submit" value="Créer" class="btn btn-primary" />

        </menu>
        <hr />
        <div class="row">
            <div class="col-md-4">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RaisonSociale" class="control-label"></label>
                    <input asp-for="RaisonSociale" class="form-control" />
                    <span asp-validation-for="RaisonSociale" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Remarque" class="control-label"></label>
                    <input asp-for="Remarque" class="form-control" />
                    <span asp-validation-for="Remarque" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mail" class="control-label"></label>
                    <input asp-for="Mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>
        

            </div>
        </div>
    </form>
 
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
